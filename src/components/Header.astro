---
import Nav from './Nav.astro';
import DarkModeToggle from './DarkModeToggle.astro';
import DevModeHeader from './DevModeHeader.astro';
---

<DevModeHeader />
<header class="flex justify-between">
  <a
    class="unset absolute z-10 left-[50%] -top-[100rem] translate-x-[-50%] bg-white text-black px-8 py-2 focus:top-[initial]"
    href="#main"
  >
    Skip to content
  </a>
  <Nav />
  <div class="flex flex-inline items-center">
    <div class="py-2 items-center content-center text-text-heading">
      <a
        class="unset animated-link"
        href="https://www.linkedin.com/in/pawellenart/"
        target="_blank"
      >
        <i
          class="fa-brands fa-linkedin"
          aria-hidden="true"
          title="PaweÅ‚ Lenart on LinkedIn"></i>
      </a>
    </div>
    <DarkModeToggle />
  </div>
</header>
<style>
  header {
    grid-area: header;
    display: grid;
    align-items: center;
    grid-template-columns: minmax(0, 1fr) minmax(0, max-content) minmax(
        0,
        max-content
      );
  }
</style>
