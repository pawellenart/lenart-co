---
import { readAll } from '../lib/markdoc/read';
import { blog } from '../lib/markdoc/frontmatter.schema';
import Renderer from './Renderer.astro';

const posts = await readAll({
  directory: 'blog',
  frontmatterSchema: blog,
});

const sortedPosts = posts
  .filter(
    (p) => p.frontmatter.draft !== true && p.frontmatter.external !== true
  )
  .sort(
    (a, b) =>
      new Date(b.frontmatter.date).valueOf() -
      new Date(a.frontmatter.date).valueOf()
  );
---

<section class="mb-8" slot="main">
  {
    sortedPosts.slice(0, 5).map((post) => {
      const formattedDate = new Date(post.frontmatter.date).toLocaleDateString(
        'en-us',
        {
          year: 'numeric',
          month: 'long',
          day: 'numeric',
        }
      );
      return (
        <>
          <article class="mb-6 pb-6 border-b last:border-b-0 last:mb:0">
            <div class="mb-4">
              <h2 class="text-center text-3xl mb-4">
                <a href={`/blog/${post.slug}`} class="unset blog-item-link">
                  {post.frontmatter.title}
                </a>
              </h2>
              <div class="text-center text-xs">
                <time datetime={post.frontmatter.date.toISOString()}>
                  {formattedDate}
                </time>
              </div>
            </div>
            <div class="text-justify">{post.frontmatter.description}</div>
          </article>
        </>
      );
    })
  }
</section>
